<section class="box">
  <%= form_for  @actor do |f|%>
  <div class="form-group">
    <label for="actor_name">Nombre Actor</label>
    <%= f.text_field :name%>
  </div>
  <div class="form-group">
    <label for="actor_bio">Biografia</label>
    <%= f.text_field :bio%>
  </div>
  <div class="form-group">
    <label for="actor_birth_date">Fecha de Nacimiento </label>
    <%= f.text_field :birth_date%>
  </div>
  <div class="form-group">
    <label for="actor_birth_place">Lugar de Nacimiento</label>
    <%= f.text_field :birth_place%>
  </div>
  <div class="form-group">
    <label for="actor_image_url">Foto</label>
    <%= f.text_field :image_url%>
  </div>
  <div class="form-group">
    <label for="actor_alive">Vida</label>
    <%= f.text_field :alive%>
  </div>
  <div class="form-group">
    <label for="actor_death_date">Fecha de Fallecimiento</label>
    <%= f.text_field :death_date%>
  </div>
  <div class="form-group">
    <label for="actor_death_place">Lugar de Muerte</label>
    <%= f.text_field :death_place%>
  </div>
  <%= f.submit %>
  <% end %>
</section>
